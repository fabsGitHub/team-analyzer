FROM node:20-alpine AS build
WORKDIR /app
COPY frontend/package.json frontend/package-lock.json* ./
RUN npm ci || npm i
COPY frontend/ .
# Prod-Build: Vite liest VITE_API_BASE aus der Umgebung; wir nutzen im Docker-Setup /api
ENV VITE_API_BASE=/api
RUN npm run build

FROM nginx:alpine
# Nginx-Konfiguration mit API-Proxy
COPY docker/nginx.conf /etc/nginx/conf.d/default.conf
# Statisches Bundle
COPY --from=build /app/dist /usr/share/nginx/html
EXPOSE 80
